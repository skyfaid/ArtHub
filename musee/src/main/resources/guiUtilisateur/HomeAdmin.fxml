<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane layoutX="5.0" layoutY="5.0" prefHeight="590.0" prefWidth="990" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 5; -fx-background-radius: 5;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Users.HomeAdminController">
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
        <tabs>
            <Tab text="Overview">
                <content>
                    <VBox spacing="20">
                    <HBox spacing="20">
                        <PieChart fx:id="userRolesChart" title="User Roles Distribution"/>
                        <PieChart fx:id="userGenderChart" title="User Gender Distribution"/>
                    </HBox>
                        <BarChart fx:id="userActivityChart" title="User Registrations Per Month">
                            <xAxis>
                                <CategoryAxis label="Month"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Number of Users"/>
                            </yAxis>
                        </BarChart>
                    </VBox>
                </content>
            </Tab>
            <Tab text="Users Last Connection">
                <content>
                    <LineChart fx:id="userLastConnectionChart" title="User Last Connection Time">
                        <xAxis>
                            <CategoryAxis label="User"/>
                        </xAxis>
                        <yAxis>
                             <NumberAxis label="Days Since Last Login"/>
                        </yAxis>
                    </LineChart>
                </content>
            </Tab>
        </tabs>
    </TabPane>
</AnchorPane>
