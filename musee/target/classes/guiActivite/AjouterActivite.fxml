<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="contentPane" prefHeight="570" prefWidth="900.0" stylesheets="@/css/csskolchay.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Activities.AjouterActivite">
    <children>
        <VBox fx:id="Test" />
        <VBox fx:id="participationview" prefHeight="626.0" prefWidth="900.0">

            <HBox prefHeight="570" prefWidth="875.0" spacing="15">
                <VBox fx:id="activitesView" prefHeight="570" prefWidth="368.0" spacing="10" stylesheets="@/css/csskolchay.css">
                    <Label alignment="CENTER" prefHeight="35.0" prefWidth="344.0" text="ACTIVITE" textAlignment="CENTER">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                    <HBox spacing="10">
                        <Label text="nom d'activite :" />
                        <TextField fx:id="nomTF" prefHeight="27.0" prefWidth="216.0" promptText="Nom Activite" />
                    </HBox>
                    <HBox spacing="10">
                        <Label text="date debut d'activite :" />
                        <DatePicker fx:id="date_debFX" promptText="date debut" />
                    </HBox>
                    <HBox spacing="10">
                        <Label text="date fin d'activite :" />
                        <DatePicker fx:id="date_finFX" prefHeight="27.0" prefWidth="200.0" promptText="date fin" />
                    </HBox>
                    <HBox spacing="10">
                        <Label text="lieu d'activite :" />
                        <TextField fx:id="LieuTF" alignment="TOP_LEFT" prefHeight="27.0" prefWidth="222.0" promptText="Lieu Activite" />
                    </HBox>
                    <HBox spacing="10">
                        <Label text="nombre de places :" />
                        <TextField fx:id="nbreTF" prefHeight="27.0" prefWidth="198.0" promptText="Nbre De Places" />
                    </HBox>
                    <HBox spacing="10">
                        <Label text="type :" />
                        <TextField fx:id="typeFX" prefHeight="27.0" prefWidth="270.0" promptText="type" />
                    </HBox>
                    <HBox spacing="10">
                        <Label layoutX="188.0" layoutY="441.0" text="Poster" />
                        <Button fx:id="chargerImage" layoutX="267.0" layoutY="434.0" mnemonicParsing="false" onAction="#chargerImage" prefHeight="37.0" prefWidth="102.0" text="Charger" />
                    </HBox>
                    <HBox spacing="10">

                        <Button fx:id="ajouterButton" onAction="#ajouter" text="ajouter" />
                        <Button fx:id="supprimerButton" onAction="#supprimer" text="supprimer" />
                        <Button fx:id="modifierButton" onAction="#modifier" text="modifier" />
                    </HBox>
                    <TextField fx:id="modifyFX" layoutX="565.0" layoutY="471.0" />
                    <Button fx:id="afficherparticipants" onMouseClicked="#afficherparticipants" text="Afficher Participants" />
                </VBox>
                <ScrollPane layoutX="10" layoutY="10" prefHeight="570.0" prefWidth="628.0">
                    <TilePane fx:id="ActTilePane" alignment="TOP_CENTER" hgap="10" prefColumns="3" prefWidth="590" styleClass="tile-pane" stylesheets="@/css/cssForTile.css" vgap="10">
                        <children>
                            <!-- Prototype card for visual reference in FXML -->
                        </children>
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                    </TilePane>
                </ScrollPane>


            </HBox>
        </VBox>
    </children>
</AnchorPane>
