<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Users.WebcamViewController" prefHeight="600.0" prefWidth="800.0">
    <VBox alignment="CENTER" spacing="20.0" layoutX="100.0" layoutY="50.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
        <Label text="Select Webcam:"/>
        <ComboBox fx:id="webcamSelector" prefWidth="200.0" />
        <ImageView fx:id="webcamFeed" fitHeight="360.0" fitWidth="480.0" preserveRatio="true"/>
        <Button text="Capture Facial Features" onAction="#captureFacialExpression" prefWidth="200.0"/>
        <Label fx:id="hashResult" text="Facial feature hash will appear here" wrapText="true"/>
    </VBox>
</AnchorPane>